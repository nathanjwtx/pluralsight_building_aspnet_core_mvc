@model ShoppingCartViewModel 

<h2>Your shopping cart</h2>
<h4>Here are your pies.</h4>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Selected Amount</th>
        <th>Pie</th>
        <th class="text-right">Price</th>
        <th class="test-right">Subtotal</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
    {
        <tr>
            <td class="text-center">@line.Amount</td>
            <td class="text-left">@line.Pie.Name</td>
            <td class="text-right">@line.Pie.Price.ToString("C")</td>
            <td class="text-right">@((line.Amount * line.Pie.Price).ToString("C"))</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td class="text-right" colspan="3">Total:</td>
        <td class="text-right">
            @Model.ShoppingCartTotal.ToString("C")
        </td>
    </tr>
    </tfoot>
</table>

<div class="text-center">
    <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary">Check out now!</a>
</div>
