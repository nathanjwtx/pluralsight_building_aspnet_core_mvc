@model Pie

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDesc</h4>
        <p>@Model.LongDesc</p>
        <div class="addToCart">
            <p class="button">
                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId" class="btn btn-primary">Add to cart</a>
            </p>
        </div>
    </div>
</div>